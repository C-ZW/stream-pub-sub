{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./lib",
        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictPropertyInitialization": true,
        "noUnusedLocals": true
    },
    "include": [
        "./example",
        "src/index.ts",
        "./src"
    ],
    "exclude": [
        "node_modules",
        "./test"
    ]
}